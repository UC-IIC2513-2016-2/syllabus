<% if notice %>
<div class="notice"><%= notice %></div>
<% end %>

<h1>Ingreso de datos</h1>

<%= form_for(@data_entry) do |f| %>
  <% if @data_entry.errors.any? %>
    <div id="error_explanation">
      <h2>Corrige los siguientes errores:</h2>
      <ul>
        <% @data_entry.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :temperature %>
    <%= f.number_field :temperature, step: :any %>
  </div>

  <div class="field">
    <%= f.label :temperature_unit %>
    <%= f.collection_radio_buttons :temperature_unit, [:C, :F], :to_sym, :to_sym  %>
  </div>

  <div class="field">
    <%= f.label :latitude %>
    <%= f.number_field :latitude, step: :any %>
  </div>

  <div class="field">
    <%= f.label :longitude %>
    <%= f.number_field :longitude, step: :any %>
  </div>

  <div class="field">
    <%= f.label :altitude %>
    <%= f.number_field :altitude, step: :any %>
  </div>

  <div class="field">
    <%= f.label 'Outside?' %>
    <%= f.check_box :outside %>
  </div>

  <div class="field">
    <%= f.label :notes %>
    <%= f.text_area :notes %>
  </div>

  <div class="actions">
    <%= f.submit 'Ingresar datos' %>
  </div>
<% end %>
